{
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "silent",
		"focus": false,
		"panel": "shared",
		"revealProblems": "onProblem",
		"showReuseMessage": false,
		"clear": true
	},
	"tasks": [
		{
			"label": "Game: Build",
			"icon": {
				"id": "tools",
				"color": "terminal.ansiMagenta"
			},
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/samples/Game/Game.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Game: Watch",
			"icon": {
				"id": "eye-watch",
				"color": "terminal.ansiMagenta"
			},
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"--project",
				"${workspaceFolder}/samples/Game/Game.csproj"
			]
		}
	]
}
