{
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "silent",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": false,
		"clear": true
	},
	"tasks": [
		{
			"label": "Game: Build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Game/Game.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "UIDemo: Build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/UIDemo/UIDemo.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Editor: Build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Editor/MGE.Editor.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Game: Watch",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"icon": {
				"id": "eye-watch",
				"color": "terminal.ansiBlue"
			},
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"--project",
				"${workspaceFolder}/Game/Game.csproj"
			]
		},
		{
			"label": "UIDemo: Watch",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/UIDemo/UIDemo.csproj"
			],
			"problemMatcher": "$msCompile"
		}
	]
}
