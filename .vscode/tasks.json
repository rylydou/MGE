			},
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				// "run",
				"--project",
				"${workspaceFolder}/Game/Game.csproj",
				// "/property:GenerateFullPaths=true",
				// "/consoleloggerparameters:NoSummary",
				// "--nologo"
			],
			// "problemMatcher": "$msCompile",
		},
		{
			"label": "UIDemo: Watch",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"run",
				"${workspaceFolder}/UIDemo/UIDemo.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
