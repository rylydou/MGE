{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Game",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Game/Game.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build UIDemo",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/UIDemo/UIDemo.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Build Editor",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Editor/MGE.Editor.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary",
				"--nologo"
			],
			"problemMatcher": "$msCompile"
		}
	]
}
